{
  "version": 2,
  "builds": [
    { 
      "src": "web/main.py", 
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb",
        "runtime": "python3.9",
        "installCommand": "pip install -r requirements.in"
      }
    },
    { 
      "src": "web/static/**", 
      "use": "@vercel/static" 
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/web/static/$1" },
    { "src": "/api/(.*)", "dest": "/web/main.py" },
    { "src": "/", "dest": "/web/main.py" },
    { "src": "/(.*)", "dest": "/web/main.py" }
  ],
  "env": {
    "PYTHONPATH": "/var/task:/var/task/web:/var/task/api"
  }
}
