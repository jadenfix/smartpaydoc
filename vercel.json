{
  "version": 2,
  "builds": [
    { "src": "web/main.py", "use": "@vercel/python" },
    { "src": "web/static/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/web/static/$1" },
    { "src": "/api/(.*)", "dest": "/web/main.py" },
    { "src": "/", "dest": "/web/main.py" },
    { "src": "/(.*)", "dest": "/web/main.py" }
  ],
  "buildCommand": "./vercel-build.sh",
  "outputDirectory": ".",
  "env": {
    "PYTHONPATH": "/var/task:/var/task/web:/var/task/api"
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/web/main.py" },
    { "source": "/(.*)", "destination": "/web/main.py" }
  ]
}
