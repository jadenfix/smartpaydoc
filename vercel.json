{
  "version": 2,
  "builds": [
    { 
      "src": "api/index.py", 
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    { 
      "src": "web/static/**", 
      "use": "@vercel/static" 
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/web/static/$1" },
    { "src": "/api/(.*)", "dest": "/api/index.py" },
    { "src": "/(.*)", "dest": "/api/index.py" }
  ],
  "build": {
    "env": {
      "PYTHONPATH": "/var/task"
    }
  }
}
